                <!-- Doctor's Action -->
                <div class="doctor-action">
                    <div class="action-header">
                        <div class="action-icon">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h5 class="action-title">Doktor Değerlendirmesi ve Sonuç</h5>
                    </div>
                    <p>AI tanısını değerlendirin ve sonraki adımları belirleyin:</p>

                    <div class="action-options">
                        <div class="action-option">
                            <input type="radio" name="decision" id="confirmDiagnosis" class="form-check-input action-option-radio" checked>
                            <label for="confirmDiagnosis" class="form-check-label">AI tanısını onaylıyorum - Nevus (Ben)</label>
                        </div>
                        <div class="action-option">
                            <input type="radio" name="decision" id="partialConfirm" class="form-check-input action-option-radio">
                            <label for="partialConfirm" class="form-check-label">AI tanısını kısmen onaylıyorum (açıklama ekleyin)</label>
                        </div>
                        <div class="action-option">
                            <input type="radio" name="decision" id="differentDiagnosis" class="form-check-input action-option-radio">
                            <label for="differentDiagnosis" class="form-check-label">Farklı bir tanı öneriyorum</label>
                        </div>
                        <div class="action-option">
                            <input type="radio" name="decision" id="furtherTests" class="form-check-input action-option-radio">
                            <label for="furtherTests" class="form-check-label">Ek test/biyopsi gerekli</label>
                        </div>
                    </div>

                    <div class="action-field">
                        <label for="doctorNotes" class="form-label">Doktor Notları:</label>
                        <textarea class="form-control" id="doctorNotes" rows="4" placeholder="Değerlendirmenizi ve hasta için önerilerinizi buraya ekleyin..."></textarea>
                    </div>

                    <div class="action-field">
                        <label class="form-label">Hasta İçin Önerilen Aksiyon:</label>
                        <select class="form-select">
                            <option selected>Takip ve izlem - 6 ay sonra kontrol</option>
                            <option>Takip ve izlem - 3 ay sonra kontrol</option>
                            <option>Biyopsi için yönlendirme</option>
