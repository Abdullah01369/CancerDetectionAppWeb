    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching
            const tabs = document.querySelectorAll('.custom-tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');

                    // Remove active from all tabs
                    tabs.forEach(t => t.classList.remove('active'));

                    // Add active to current tab
                    this.classList.add('active');

                    // Hide all tab contents
                    document.getElementById('uploadTab').style.display = 'none';
                    document.getElementById('historyTab').style.display = 'none';

                    // Show current tab content
                    if (tabId === 'upload') {
                        document.getElementById('uploadTab').style.display = 'block';
                    } else if (tabId === 'history') {
                        document.getElementById('historyTab').style.display = 'block';
                    }
                });
            });

            // File upload handling
            const photoUpload = document.getElementById('photoUpload');
            const uploadSection = document.getElementById('uploadSection');
            const previewSection = document.getElementById('previewSection');
            const backToUpload = document.getElementById('backToUpload');
            const imagePreviews = document.getElementById('imagePreviews');
            const savePhotosBtn = document.getElementById('savePhotosBtn');

            photoUpload.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    uploadSection.style.display = 'none';
                    previewSection.style.display = 'block';

                    // Clear previous previews
                    imagePreviews.innerHTML = '';

                    // Create previews for each selected file
                    Array.from(this.files).forEach((file, index) => {
                        const reader = new FileReader();

                        reader.onload = function(e) {
                            const previewItem = document.createElement('div');
                            previewItem.className = 'preview-item';

                            previewItem.innerHTML = `
                                <img src="${e.target.result}" class="preview-img" alt="Preview Image">
                                <span class="preview-tag">Fotoğraf ${index + 1}</span>
                                <div class="preview-overlay">
                                    <div class="preview-actions">
                                        <button class="btn-preview preview-btn" data-src="${e.target.result}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-remove">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            `;

                            imagePreviews.appendChild(previewItem);

                            // Add event listeners for preview buttons
                            const previewButtons = previewItem.querySelectorAll('.preview-btn');
                            previewButtons.forEach(btn => {
                                btn.addEventListener('click', function() {
                                    const src = this.getAttribute('data-src');
                                    const previewImage = document.getElementById('previewImage');
                                    previewImage.src = src;

                                    const previewModal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
                                    previewModal.show();
                                });
                            });

                            // Add event listeners for remove buttons
                            const removeButtons = previewItem.querySelectorAll('.btn-remove');
                            removeButtons.forEach(btn => {
                                btn.addEventListener('click', function() {
                                    previewItem.remove();
                                    if (imagePreviews.children.length === 0) {
                                        previewSection.style.display = 'none';
                                        uploadSection.style.display = 'block';
                                    }
                                });
                            });
                        };

                        reader.readAsDataURL(file);
                    });
                }
            });

            backToUpload.addEventListener('click', function() {
                previewSection.style.display = 'none';
                uploadSection.style.display = 'block';
            });

            savePhotosBtn.addEventListener('click', function() {
                const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                successModal.show();

                // Reset the form after success
                setTimeout(() => {
                    document.getElementById('bodyLocation').selectedIndex = 0;
                    document.getElementById('lesionType').selectedIndex = 0;
                    document.getElementById('lesionSize').value = '';
                    document.getElementById('lesionDuration').value = '';
                    document.getElementById('durationUnit').selectedIndex = 0;
                    document.getElementById('notes').value = '';
                    document.getElementById('patientConsent').checked = false;

                    const checkboxes = document.querySelectorAll('.form-check-input[type="checkbox"]');
                    checkboxes.forEach(checkbox => {
                        checkbox.checked = false;
                    });

                    previewSection.style.display = 'none';
                    uploadSection.style.display = 'block';
                    imagePreviews.innerHTML = '';
                }, 500);
            });
        });
    </script>
